<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Datos de Usuarios</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
  <style>
    body {
      background-color: #f8f9fa;
    }
    .custom-bg {
      background-color: #a7c5bd;
    }
    .container {
      margin-bottom: 5%;
    }
    .table-custom {
      background-color: #e1e6e3;
      border: 2px solid #a7c5bd;
    }
    .table-hover tr:hover {
      background-color: #c9d9d3;
      transform: scale(1.02);
      transition: all 0.3s ease;
    }
    .table-striped > tbody > tr:nth-child(odd) > td,
    .table-striped > tbody > tr:nth-child(odd) > th {
      background-color: #d9e6e2;
    }
    .table-striped > tbody > tr:nth-child(even) > td,
    .table-striped > tbody > tr:nth-child(even) > th {
      background-color: white;
    }
  </style>
</head>
<body>
  <img src="https://portafolio-personal-teal.vercel.app/assets/MireyaAPZ.png" width="100%" height="auto"/>
  <div class="custom-bg">
    <div class="container">
      <header class="d-flex justify-content-center py-3">
      </header>
    </div>
  </div>
  <div class="container">
    <a href="/" class="custom-bg text-white fw-bold btn border-radius animate__animated animate__bounceIn">Volver al inicio</a>
    <h1 class="fw-bold text-center animate__animated animate__fadeInDown">MUSICAS AGREGADAS</h1>
    <% if (typeof message !== 'undefined') { %>
      <p><%= message %></p>
    <% } else { %>
      <table id="tabla-musicas" class="table table-striped table-hover table-custom animate__animated animate__fadeInUp text-center">
        <thead>
          <tr>
            <th>#</th>
            <th>NOMBRE</th>
            <th>GÃ‰NERO</th>
            <th>ARTISTA</th>
          </tr>
        </thead>
        <tbody>
          <% let contador = 1; %>
          <% users.forEach(function(user) { %>
          <tr>
            <td><%= contador++ %></td>
            <td><%= user.nombre %></td>
            <td><%= user.genero %></td>
            <td><%= user.artista %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    <% } %>
  </div>
</body>
</html>